<h1>New Song</h1>
<form method="post" action="/songs">

<label>Name</label>
<input type="text" name="song[name]" id="Name">
<br><br>
<label>Choose Existing Artists</label>
<br>
<%Artist.all.each do |artist|%>
    <input type="checkbox" name="song[artist_id]" id="artist_<%=artist.id%>" value="<%=artist.id%>" ><%=artist.name%></input>
<%end%>

<br><br>
<label>Artist</label>
<input type="text" name="artist[name]" id="Artist Name">

<br><br>
<label>Choose Existing Genres</label>
<br>
<%Genre.all.each do |genre|%>
    <input type="checkbox" name="songgenre[genre_id]" id="genre_<%=genre.id%>" value="<%=genre.id%>" ><%=genre.name%></input>
<%end%>

<br><br>
<label>Genre</label>
<input type="text" name="genre[name]" id="Genre Name">

<br><br>
<input type="submit" id="submit">
</form>
