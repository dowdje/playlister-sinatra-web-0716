<h1>Edit Song</h1>
<form method="post" action="/songs/<%=@song.slug%>">
<input id="hidden" type="hidden" name="_method" value="patch">

<label>Name</label>
<input type="text" name="song[name]" value="<%=@song.name%>" id="<%=@song.name%>">
<br><br>
<label>Choose Existing Artists</label>
<br>
<%Artist.all.each do |artist|%>
    <input type="checkbox" name="song[artist_id]" id="<%=artist.name%>" value="<%=artist.name%>" ><%=artist.name%></input>
<%end%>

<br><br>
<label>Artist</label>
<input type="text" name="artist[name]" value="<%=@song.artist.name%>" id="Artist Name">

<br><br>
<label>Choose Existing Genres</label>
<br>
<%Genre.all.each do |genre|%>
    <input type="checkbox" name="songgenre[][genre_id]" id="<%=genre.name%>" value="<%=genre.id%>" ><%=genre.name%></input>
<%end%>

<br><br>
<label>Genre</label>
<input type="text" name="genre[name]" id="Genre Name">

<br><br>
<input type="submit" value="Save">
</form>
